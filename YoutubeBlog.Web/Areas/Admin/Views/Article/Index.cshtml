@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4">
		<span class="text-muted fw-light">Article Control /</span> Articles
	</h4>

	<!-- Basic Bootstrap Table -->
	<div class="card">
		<h5 class="card-header">Table Basic</h5>
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Title</th>
						<th>Category</th>
						<th>CreatedDate</th>
						<th>CreatedBy</th>
						<th>IsActive</th>
						<th>Transactions</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Title</th>
						<th>Category</th>
						<th>CreatedDate</th>
						<th>CreatedBy</th>
						<th>IsActive</th>
						<th>Transactions</th>
					</tr>
				</tfoot>
				<tbody class="table-border-bottom-0">
					@foreach (var article in Model)
					{
						<tr name="@article.Id">
							<td>
								@article.Title
							</td>
							<td>
								@article.Category.Name
							</td>
							<td>
								@article.CreatedDate.ToShortDateString()
							</td>
							<td>
								@article.CreatedBy
							</td>
							<td>
								@(article.IsDeleted ? "Aktif değil" : "Aktif")
							</td>
							<td></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<!--/ Basic Bootstrap Table -->
</div>


@section Scripts {
	<script src="~/js/articleIndex.js"></script>
	@* <script src="~/js/articleIndex.js"></script> *@

	<script>
		$(document).ready(function () {
			$('#articlesTable').DataTable({
				// DataTables yapılandırması buraya gelir
			});
		});
	</script>
}
